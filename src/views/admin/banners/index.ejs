<h1><%= __('banners') %></h1>
<a href="/admin/banners/create" class="btn btn-primary mb-3"><%= __('create_banner') %></a>
<table class="table table-hover table-bordered table-responsive">
  <thead class="table-dark">
    <tr>
      <th><%= __('id') %></th>
      <th><%= __('title') %></th>
      <th><%= __('description') %></th>
      <th><%= __('author') %></th>
      <th><%= __('actions') %></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% banners.forEach(banner => { %>
      <tr>
        <td><%= banner.id %></td>
        <td><%= banner.titulo %></td>
        <td><%= banner.descripcion %></td>
        <td><%= banner.User.username %></td>
        <td><a href="/admin/banners/update/<%= banner.id %>" class="btn btn-primary"><%= __('edit') %></a>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal<%= banner.id %>"><%= __('delete') %></button></td>
      </tr>
      <div class="modal fade" id="exampleModal<%= banner.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel"><%= __('warning_message') %></h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= __('delete_banner_question') %> <b><%= banner.titulo %></b> <%= __('delete_banner_question_2') %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= __('cancel') %></button>
              <form action="/admin/banners/delete/<%= banner.id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger"><%= __('delete') %></button>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </tbody>
</table>
