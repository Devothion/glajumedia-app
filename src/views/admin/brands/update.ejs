<div class="card mb-3">
    <img src="<%= brand.logoUrl %>" class="card-img-top" alt="<%= brand.nombre %>" style="background-color: darkgray;">
    <form method="POST" action="/admin/brands/update?_method=PUT" enctype="multipart/form-data">
      <div class="card-body">
        <h5 class="card-title">Editar Banner</h5>
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre</label>
          <input type="text" id="nombre" name="nombre" class="form-control" required value="<%= brand.nombre %>">
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Logo Brand</label>
          <input type="file" id="image" name="image" class="form-control">
        </div>
        <div class="mb-3">
          <label for="color" class="form-label">Color Brand</label>
          <input type="color" id="color" name="color" class="form-control form-control-color" required value="<%= brand.colorCode %>">
        </div>
      </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-success">Actualizar</button>
        <a href="/admin/brands" class="btn btn-danger">Cancelar</a>
      </div>
    </form>
  </div>